{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
    "types": ["vitest/globals", "node"],
    "paths": {
      "~/src/*": ["src/*"],
      "~/scripts/*": ["scripts/*"],
      "@chunks/shared": ["src/chunks/shared"],
      "@chunks/state": ["src/chunks/state"],
    },
  },
  "include": ["*.ts", "scripts", "src", "tests", "dts"],
  "exclude": ["**/dist/**/*"],
}
