{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
    "types": ["vitest/globals", "node"],
    "paths": {
      "@internal/shared": ["packages/shared/src"],
      "~shared/*": ["packages/shared/src/*"],
      "~tailwindcss-plugin-icons/*": [
        "packages/tailwindcss-plugin-icons/src/*"
      ],
      "~/scripts/*": ["scripts/*"]
    }
  },
  "include": ["*.ts", "scripts", "dts", "packages/*/src", "packages/*/tests"],
  "exclude": ["**/dist/**/*"]
}
