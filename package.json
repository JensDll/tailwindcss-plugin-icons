{
  "private": true,
  "scripts": {
    "build": "node --loader @esbuild-kit/esm-loader scripts/build.ts",
    "build:vue": "pnpm run --filter \"vue-playground\" build",
    "dev": "rollup --config --watch --configPlugin esbuild",
    "dev:vue": "pnpm run --filter \"vue-playground\" dev",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "pnpm exec eslint --ignore-pattern \"/scripts/*\" --rule \"no-console: [\"error\", { allow: [\"warn\", \"error\"] }]\" --max-warnings 0 . & pnpm exec eslint --max-warnings 0 \"./scripts/**\""
  },
  "type": "module",
  "dependencies": {
    "@esbuild-kit/esm-loader": "2.5.0",
    "@iconify/types": "2.0.0",
    "@internal/shared": "workspace:*",
    "@rollup/plugin-alias": "4.0.0",
    "@rollup/plugin-node-resolve": "15.0.0",
    "@rollup/plugin-replace": "5.0.0",
    "@types/fs-extra": "9.0.13",
    "@types/node": "18.8.4",
    "@typescript-eslint/eslint-plugin": "5.40.0",
    "@typescript-eslint/parser": "5.40.0",
    "c8": "7.12.0",
    "esbuild": "0.15.10",
    "esbuild-register": "3.3.3",
    "eslint": "8.25.0",
    "eslint-plugin-import": "2.26.0",
    "execa": "6.1.0",
    "fs-extra": "10.1.0",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "rollup": "3.0.0",
    "rollup-plugin-dts": "4.2.3",
    "rollup-plugin-esbuild": "4.10.1",
    "tailwindcss": "3.1.8",
    "tailwindcss-plugin-icons": "workspace:*",
    "typescript": "4.8.4",
    "vitest": "0.24.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "postcss"
      ]
    }
  }
}
